@model MVCProject.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@_localization.Getkey("Create") </h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@_localization.Getkey("Name") " class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="@_localization.Getkey("Name")" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="@_localization.Getkey("Create")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@_localization.Getkey("BacktoList") </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
